{
  "statusLine": {
    "type": "command",
    "command": "~/.claude/kit/bin/cc-statusline",
    "padding": 0
  },
  "hooks": {
    "SubagentStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 "$(git rev-parse --show-toplevel)/.claude/hooks/agent_state.py""
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 "$(git rev-parse --show-toplevel)/.claude/hooks/agent_state.py""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 "$(git rev-parse --show-toplevel)/.claude/hooks/agent_state.py""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 "$(git rev-parse --show-toplevel)/.claude/hooks/agent_state.py""
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 "$(git rev-parse --show-toplevel)/.claude/hooks/agent_state.py""
          }
        ]
      }
    ]
  }
}
